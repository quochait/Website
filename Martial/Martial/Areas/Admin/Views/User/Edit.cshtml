
@model ApplicationUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    @* Create Information about user *@
    <div class="container border border-primary p-3 rounded text-center" id="information">
        <div class="row form-group ">
            <div class="col-4">
                <label asp-for="@Model.Name" class="font-weight-bold"></label>
            </div>
            <div class="col-8">
                <input type="text" asp-for="@Model.Name" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-4 font-weight-bold">
                <label asp-for="@Model.Email"></label>
            </div>
            <div class="col-8">
                <input class="form-control" asp-for="@Model.Email">
            </div>
        </div>

        <div class="row form-group">
            <div class="col-4 font-weight-bold">
                Phone number
            </div>
            <div class="col-8">
                <input type="text" asp-for="@Model.PhoneNumber" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-4 font-weight-bold">
                Acitive
            </div>
            <div class="col-8">
                <input type="checkbox" asp-for="@Model.LockoutEnabled" />
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <input type="submit" value="Save" class="btn btn-success col-2" />
        <a class="btn btn-sm btn-light col-2" asp-action="Index">Back to list</a>
    </div>
</form>


