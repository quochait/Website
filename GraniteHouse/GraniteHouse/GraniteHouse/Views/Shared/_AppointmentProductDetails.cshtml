
@model List<GraniteHouse.Models.Products>


@if (Model.Count > 0)
{
    <table class="table table-striped" width="100%">

        <tr class="table-info">
            <th class="text-center" width="20%"></th>
            <th class="text-center">
                <label asp-for="@Model.FirstOrDefault().Name"></label>
            </th>
            <th class="text-center">
                <label asp-for="@Model.FirstOrDefault().Price"></label>
            </th>
            <th class="text-center">
                <label asp-for="@Model.FirstOrDefault().ShadeColor"></label>
            </th>
            <th class="text-center">
                <label asp-for="@Model.FirstOrDefault().ProductTypes.Name"></label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="padding: 50px;" class="justify-content-">
                <td>
                    <a asp-area="Customer" asp-action="Details" asp-controller="Home" asp-route-id="@item.ID">
                        <img src="@item.Image" alt="imgae" class="img-thumbnail" />
                    </a>
                </td>
                <td class="text-center">
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(m => item.ShadeColor)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(m => item.ProductTypes.Name)
                </td>
                <td style="text-align: center;">
                    <button type="submit" class="btn btn-danger" asp-action="Remove" asp-route-id="@item.ID">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div>No items in your cart</div>
}