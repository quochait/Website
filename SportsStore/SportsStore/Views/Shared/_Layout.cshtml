

<!DOCTYPE html>

<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <link rel="stylesheet" asp-href-include="/lib/twitter-bootstrap/css/bootstrap.css" asp-href-exclude="/lib/twitter-bootstrap/css*-reboot*, *-grid*" />
  <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/*.css">

  <title>SportsStore</title>
</head>

<body>
  <div class="navbar bg-dark" role="navigation">
   
      <a href="#" class="col navbar-brand col-8" style="color: white; margin-right: 0px;" >SPORT STORE</a>
      <div class="col-4 text-right">
        @await Component.InvokeAsync("CartSummary")
      </div>
    </div>
  
  <div class="row m-1 p-1">
    <div class="col-3" id="categories">
      @await Component.InvokeAsync("NavigationMenu")
    </div>
    <div class="col-9">
      @RenderBody()
    </div>
  </div>

</body>
</html>