@model GraniteHouse.Models.Appointments

<h4 class="text-success">Appointment Details</h4>

<div class="container border" style="height: 100px; background-color: aliceblue;">
    <div class="col-12">
        <div class="row" style="padding-top: 10px;">
            <div class="col-2">
                Full Name
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="@Model.CustomerName" readonly />
            </div>
            <div class="col-2"></div>

            <div class="col-2">
                Email
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="@Model.CustomerEmail" readonly />
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="row" style="padding-top: 10px;">
            <div class="col-2">
                Phone Number
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="@Model.CustomerPhoneNumber" readonly />
            </div>
            <div class="col-2"></div>
            <div class="col-2">
                Appointment Date
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="@Model.AppointmentDate" readonly />
            </div>
        </div>
    </div>
</div>