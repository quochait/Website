@model Product[]

@{ 
    ViewBag.Title = "Product Name";
}

    <table>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>
        @foreach (Product product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@($"{product.Price:c2}")</td>
            </tr>
        }
    </table>